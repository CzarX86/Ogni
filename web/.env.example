# Environment Variables for Ogni E-commerce
# Copy this file to .env.local and fill with your actual values

# Mercado Pago Configuration
REACT_APP_MERCADO_PAGO_ACCESS_TOKEN=your_mercado_pago_access_token_here
REACT_APP_MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key_here

# Melhor Envio Configuration
REACT_APP_MELHOR_ENVIO_TOKEN=your_melhor_envio_token_here

# API Configuration
REACT_APP_API_BASE_URL=https://api.ogni.com/v1

# Firebase Configuration (if needed)
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=ogni-41040

# Dev Admin (optional fallback if Anonymous auth is disabled)
REACT_APP_DEV_ADMIN_EMAIL=admin@ogni.com
REACT_APP_DEV_ADMIN_PASSWORD=Desert@1

# Analytics (Optional)
REACT_APP_GA_TRACKING_ID=your_google_analytics_id
REACT_APP_FB_PIXEL_ID=your_facebook_pixel_id